{% extends 'base.html.twig' %}

{% block title %}
	Duel Results
{% endblock %}

{% block body %}
	<style>
		.example-wrapper {
			margin: 1em auto;
			max-width: 800px;
			width: 95%;
			font: 18px / 1.5 sans-serif;
		}
		.example-wrapper code {
			background: #f5f5f5;
			padding: 2px 6px;
		}
		table {
			width: 100%;
			border-collapse: collapse;
			margin-top: 20px;
		}
		th,
		td {
			border: 1px solid #ddd;
			border: 1px solid rgb(1, 0, 0);
			padding: 8px;
			text-align: left;
		}
		th {
			background-color: #f2f2f2;
		}
		a {
			text-decoration: none;
			color: #FF0000;
		}
	</style>
	<div class="example-wrapper">
		<h1>Duel Results</h1>

		<table>
			<thead>
				<tr>
					<th>Round</th>
					{% for i in 0..9 %}
						<th>{{ i + 1 }}</th>
					{% endfor %}
				</tr>
			</thead>
			<tbody>
				{% for strategy in results %}
					<tr>
						<th>{{ strategy.name }}</th>
						{% for choice in strategy.choices %}
							<td>{{ choice ? 'Collaborer' : 'Résister' }}</td>
						{% endfor %}
					</tr>
				{% endfor %}
				<tr>
					<th>Total Score</th>
					{% for strategy in results %}
						<td>{{ strategy.name }}:
							{{ strategy.score }}</td>
					{% endfor %}
				</tr>
			</tbody>
		</table>
	</div>
	<a href="{{ path('app_home') }}">Retour à l'accueil</a>
{% endblock %}
